<UserControl x:Class="rpm.Left"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:rpm"
             mc:Ignorable="d" 
             d:DesignHeight="924" d:DesignWidth="300">
    <Border Background="#EEE" Grid.Column="0" Height="924" Width="300" Margin="0">
        <StackPanel Margin="20">
            <Button Content="Администратор" Style="{StaticResource ButtonPanelStyle}"/>
            <Button Content="Клиент" Style="{StaticResource ButtonPanelStyle}" Click="ClientButton_Click" />
            <Button Content="Сотрудник" Style="{StaticResource ButtonPanelStyle}" Click="TrenerButton_Click"/>
            <Button Content="Расписание" Style="{StaticResource ButtonPanelStyle}" Click="RaspisanieButton_Click"/>
        </StackPanel>
    </Border>
</UserControl>
