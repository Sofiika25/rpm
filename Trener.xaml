<UserControl x:Class="rpm.Trener"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:rpm"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="306">
    <Border BorderThickness="1" BorderBrush="#CCC" Margin="5" Padding="10" Height="360" Width="306">
        <StackPanel Height="360" Width="306">
            <Ellipse Width="180" Height="180" Fill="#EEE"/>
            <TextBlock Text="Имя" Margin="0 10 0 5" FontWeight="Bold" Style="{StaticResource NameStyle}"/>
            <TextBlock Text="Фамилия" Margin="0 0 0 10" Style="{StaticResource SpecialtyStyle}"/>
            <TextBlock Text="Номер телефона" Margin="0 0 0 10" Style="{StaticResource SpecialtyStyle}"/>
            <!--<Button Content="Подробнее" Style="{StaticResource MoreButtonStyle}" Click="About_trener"/>-->
        </StackPanel>
    </Border>
</UserControl>
