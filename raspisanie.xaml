            <DataGrid x:Name="table" Margin="20" HeadersVisibility="Column" AutoGenerateColumns="False"  Grid.Column="1" IsReadOnly="True"> 
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Дата" Width="auto" Binding="{Binding Date}"/>
                    <DataGridTextColumn Header="Время" Width="Auto" Binding="{Binding Time}"/>
                    <DataGridTextColumn Header="Направление" Width="300" Binding="{Binding Napravlenie}"/>
                    <DataGridTextColumn Header="Тип занятия" Width="400" Binding="{Binding Type}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="TextWrapping" Value="Wrap" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
