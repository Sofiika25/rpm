        xmlns:local="clr-namespace:rpm"
        mc:Ignorable="d"
        Title="raspisanie" Height="1024" Width="1440">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель (Header) -->
        <WrapPanel Grid.Row="0" Height="100" Width="Auto" Background="BurlyWood">
